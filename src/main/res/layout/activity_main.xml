            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parcourir les publications"/>

        <Button
            android:id="@+id/btnGetAllBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parcourir les livres"/>

        <Button
            android:id="@+id/btnGetAllMags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parcourir les magazines"/>
        <Button
            android:id="@+id/btnGetAllEdits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parcourir les Ã©diteurs"/>
        <Button
            android:id="@+id/btnGetAllAuthors"
